# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       controllers.Private.index
GET     /admin                                  controllers.Admin.index
GET     /admin/users/new                        controllers.Admin.newUser
GET     /admin/message/all                      controllers.Admin.broadcastForm
GET     /admin/users/:id                        controllers.Admin.editUserForm(id: Long)
GET     /public                                 controllers.Application.index
GET     /login                                  controllers.Application.login
GET     /logout                                 controllers.Private.logout
GET     /users/:name/messages/new               controllers.Private.newMessage(name)
GET     /users/new                              controllers.Application.signup
GET     /users/me                               controllers.Private.me
GET     /users/:name                            controllers.Application.user(name)
GET     /users                                  controllers.Application.users
GET     /users/me/messages                      controllers.Private.listPm
GET     /users/me/messages.json                 controllers.Private.listPmAsJSON
GET     /users/me/edit                          controllers.Private.editUser
GET     /users/me/messages/reply/:id            controllers.Private.reply(id: Long)
GET     /users/me/messages/:id                  controllers.Private.showPm(id: Long)
GET     /users/me/markedByOthers                controllers.Private.showMarkingUsers
GET     /users/me/marking                       controllers.Private.showMarkedUsers

# Post requests
POST    /admin/users/delete/:id                 controllers.Admin.delete(id: Long)
POST    /admin/users/create                     controllers.Admin.createUser
POST    /admin/users/edit/:id                   controllers.Admin.editUser(id: Long)
POST    /admin/message/all                      controllers.Admin.broadcast
POST    /auth                                   controllers.Application.auth
POST    /newUser                                controllers.Application.newUser
POST    /sendPm                                 controllers.Private.writeMessage(to: Long)
POST    /createKey                              controllers.Private.createKey
POST    /saveUser                               controllers.Private.saveUser
POST    /mark                                   controllers.Private.mark(id: Long)
POST    /unmark                                 controllers.Private.unmark(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
